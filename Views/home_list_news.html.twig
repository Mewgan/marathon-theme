<div class="col-sm-12 col-md-4 col-md-offset-1">
    <h3>Actualit√©s</h3>
    {% for post in posts %}
        {% set params = {} %}
        {% for arg in args %}
            {% if arg.value != '' %}
                {% set params = params|merge({(arg.route):arg.value}) %}
            {% else %}
                {% if arg.alias == 'p' %}
                    {% set params = params|merge({(arg.route):attribute(post,arg.column)}) %}
                {% elseif arg.alias == 'c' %}
                    {% set params = params|merge({(arg.route):attribute(post.categories[0],arg.column)}) %}
                {% endif %}
            {% endif %}
        {% endfor %}
    <div class="news">
        <time datetime="{{ post.updated_at.date | date('Y-m-d') }}">{{ post.updated_at.date | date("d") }}<span>{{ post.updated_at.date | date("M") }}</span></time>
        <div class="extra_wrapper">
            <p class="color1"><a href="{{ link(route,params) }}">{{ post.title }}</a></p>
            {{ post.description }}
        </div>
    </div>
    {% endfor %}
</div>

